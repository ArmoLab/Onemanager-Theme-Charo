---
	import ThemeSwitcher from "./base/ThemeSwitcher.astro"
	import MultiDisk from "./MultiDisk.astro"
	import "../assets/header.css"
	const { SiteName, IconURL } = Astro.props;
	
	// icons
	import Login from "./fa-icons/login.astro"
    import Menu from "./fa-icons/bars.astro"
	import ListItem from "./fa-icons/list-item.astro";
---

<header>
	<span class="buttons left">
		<span onclick="SideBar.Open()" title="Open Sidebar.">
			<Menu color="#f8f8ff"/>
		</span>
		<!--MultiDiskAreaStart-->
			<span onclick="MultiDisk.Expand()" class="MultiDiskExpander" title="Open multi disk controller">
				<ListItem color="#f8f8ff"/>
			</span>
		<!--MultiDiskAreaEnd-->
	</span>

    <div class="Header">

		<a class="title" href="/">
			<img src={ IconURL } alt="">
			<span set:html={ SiteName }></span>
    	</a>

		<span data-desc="space-between"></span>
		
		<a class="CurrentDriveName NoUnderline" href="javascript:MultiDisk.Expand();">
			<!--MultiDiskAreaStart-->
				<span id="DriveName">(CurrentDriveName)</span>
				<span class="ExpandIcon"><ListItem color="#f8f8ff" /></span>
			<!--MultiDiskAreaEnd-->
		</a>

    </div>

	<span class="buttons right">
		<span onclick="ThemeSwitcher.Switch();" title="Switch theme, light or dark">
			<ThemeSwitcher />
		</span>
		<span onclick="location.assign('/?login=admin')" title="Login">
			<Login color="#f8f8ff"/>
		</span>
	</span>
</header>
<!--MultiDiskAreaStart-->
<MultiDisk />
<!--MultiDiskAreaEnd-->

<script src="../assets/ThemeSwitcher.js"></script>
<script src="../assets/SideBar.js"></script>

