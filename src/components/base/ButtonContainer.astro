---
	const { href, onclick, disabled } = Astro.props;
---

<a class="UglyButton" href={href} onclick={onclick} data-disabled={`${disabled}`}>
    <slot />
</a>


<style>
	.UglyButton {
		display: inline-block;
        cursor: pointer;
		-webkit-transition: all .35s ease-in-out;
		transition: all .35s ease;
		background-color: rgba(128, 128, 128, .5);
		border-radius: 16px;
        padding: 8px 12px;
		user-select: none;
	}
	.UglyButton:not([data-disabled="true"]):hover {
		-webkit-transform: scale(1.05);
		transform: scale(1.05);
        box-shadow: #6a6a6a 1spx 1px 20px 0px;
	}
	.UglyButton::after {
		content: none !important;
		display: none !important;
	}

	.UglyButton[data-disabled="true"] {
		cursor: not-allowed;
		opacity: 0.65;
	}
</style>
